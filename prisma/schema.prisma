generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Board {
  id      String   @id @default(uuid())
  title   String
  columns Column[]
}

model Column {
  id      String @id @default(uuid())
  title   String
  cardIds String
  board   Board  @relation(fields: [boardId], references: [id])
  boardId String
  cards   Card[]
}

model Card {
  id          String   @id @default(uuid())
  title       String
  description String
  priority    String
  assignee    String
  column      Column   @relation(fields: [columnId], references: [id])
  columnId    String
  labels      Label[]
}

model Label {
  id    String @id @default(uuid())
  name  String
  cards Card[]
}